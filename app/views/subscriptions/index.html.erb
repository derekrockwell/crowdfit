<h1>Your subscription</h1>

<div class="row">
<% @subscriptions.each do |subscription| %>
 
<div class="span8 offset2 pagination-centered">
  <div class="well">
    <h1><%=subscription.plan.name%></h1>
    <h3><%=number_to_currency(subscription.plan.price, :unit => "$")%></h3>
    <%= link_to 'View', subscription, :class => "btn" %>
   </div>
</div>

<% end %>
</div>
