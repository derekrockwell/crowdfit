

<div id="login">
  <% if !devise_error_messages!.empty? %>
    <div class="alert alert-error alert-floating">
      <button type="button" class="close" data-dismiss="alert">Ã—</button>
      <%= devise_error_messages! %>
    </div>
  <% end %>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "well well-raised" }) do |f| %>
  
    <legend>Edit Your Account</legend>
    <small class="help-block">Enter your personal information:</small>
    <div class="control-group">
      <div><%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>
    </div>
    <div class="control-group">
      <div><%= f.label :password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password %>
        </div>
      </div>
    </div>
    <div class="control-group">
      <div><%= f.label :password_confirmation, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
    </div>
    <div class="control-group">
      <div><%= f.label :current_password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :current_password %>
        </div>
        <span class="help-block">Enter your existing password to confirm ownership of your account</span>
      </div>
    </div>    

    <div class="form-actions align-center">
      <%= f.submit "Save Changes", :class => "btn btn-primary btn-large" %>
      <%= link_to "Cancel", :back, :class => "btn " %>
    </div>
  </fieldset>
  <% end %>
</div>
