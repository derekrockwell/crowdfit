<div id="login">
	<% flash.each do |key, value| %>
	<div class="alert alert-informational alert-floating">
		<button type="button" class="close" data-dismiss="alert">Ã—</button>
		<%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
	</div>
	<% end %>
	<%= form_for("user", :url => user_session_path, :html => {:class => "form-vertical well well-raised clearfix"} ) do |f| %>

	<fieldset>
		<legend>User Login 
			<small class="pull-right">Need an account? 
				<%= link_to('Create an account', new_user_registration_path)  %>
			</small>
		</legend>
		<div class="control-group">
			<label for="email" class="control-label">Email</label>
			<div class="controls">
				<%= f.text_field(:email, :placeholder => "Email", :id => "Email", :class => "input-full", :autofocus => "autofocus") %>
			</div>
		</div>
		<div class="control-group">
			<label for="password" class="control-label">Password</label>
			<div class="controls">
				<%= f.password_field(:password, :placeholder => "Password", :id => "Password", :class => "input-full") %>
			</div>
		</div>
		<%= f.submit('Sign In', :class=>"btn btn-primary btn-large pull-right", :id => "sign_in_button") %> or
		<%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %> 

		<label class="checkbox inline">
			<input type="checkbox"> Stay logged in.
		</label>
	</fieldset>
<% end %>
</div>
<div class="row align-center">
	Forgot your password? <%= link_to "Click Here", new_user_password_path %> 
</div>
